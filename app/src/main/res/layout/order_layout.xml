<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="75dp"
    android:elevation="4dp"
    android:padding="4dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tx_id"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:gravity="center"
            android:text="tx_id"
            android:textStyle="bold"
            android:textColor="?attr/actionModeSplitBackground"
            android:textAppearance="?android:textAppearanceLarge" />


        <TextView
            android:id="@+id/tx_date"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignBottom="@+id/tx_price"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:gravity="center"
            android:text=" tx_name"
            android:textStyle="bold"
            android:textColor="?attr/actionModeSplitBackground"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tx_total"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:gravity="center"
            android:text=" tx_price"
            android:textStyle="bold"
            android:textColor="?attr/actionModeSplitBackground"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tx_usernames"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:gravity="center"
            android:text=" tx_username"
            android:textStyle="bold"
            android:textColor="?attr/actionModeSplitBackground"
            android:textAppearance="?android:textAppearanceLarge" />




        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="ID:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tx_id"
            android:layout_toRightOf="@+id/tx_id"
            android:gravity="center"
            android:text="  date:"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tx_date"
            android:layout_toRightOf="@+id/tx_date"
            android:gravity="center"
            android:text="  Total"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tx_total"
            android:layout_toRightOf="@+id/tx_total"
            android:gravity="center"
            android:text="  username"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />



    </RelativeLayout>
</android.support.v7.widget.CardView>