<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="150dp"
    android:elevation="4dp"
    android:padding="4dp">

    <RelativeLayout
        android:id="@+id/relariveLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/no_image_available" />

        <TextView
            android:id="@+id/tx_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="190dp"
            android:layout_marginStart="190dp"
            android:text="Product_name"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tx_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/tx_product_name"
            android:layout_marginLeft="305dp"
            android:layout_marginStart="305dp"
            android:layout_toEndOf="@+id/tx_product_name"
            android:layout_toRightOf="@+id/tx_product_name"
            android:text="Price"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    </RelativeLayout>
</android.support.v7.widget.CardView>