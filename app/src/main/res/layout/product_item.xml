<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="75dp"
    android:elevation="4dp"
    android:padding="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tx_id"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:gravity="center"
            android:text="tx_id"
            android:textStyle="bold"
            android:textColor="?attr/actionModeSplitBackground"
            android:textAppearance="?android:textAppearanceLarge" />


        <TextView
            android:id="@+id/tx_name"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignBottom="@+id/tx_price"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:gravity="center"
            android:text=" tx_name"
            android:textStyle="bold"
            android:textColor="?attr/actionModeSplitBackground"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tx_price"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:gravity="center"
            android:text=" tx_price"
            android:textStyle="bold"
            android:textColor="?attr/actionModeSplitBackground"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tx_stock"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:gravity="center"
            android:text=" tx_stock"
            android:textStyle="bold"
            android:textColor="?attr/actionModeSplitBackground"
            android:textAppearance="?android:textAppearanceLarge" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="ID:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tx_id"
            android:layout_toRightOf="@+id/tx_id"
            android:gravity="center"
            android:text="  Name:"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tx_name"
            android:layout_toRightOf="@+id/tx_name"
            android:gravity="center"
            android:text="  Price"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tx_price"
            android:layout_toRightOf="@+id/tx_price"
            android:gravity="center"
            android:text="  Stock"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tx_stock"
            android:layout_toRightOf="@+id/tx_stock"
            android:gravity="center"
            android:text="  Image"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />

    </RelativeLayout>


</android.support.v7.widget.CardView>