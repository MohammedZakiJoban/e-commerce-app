<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="200dp"
    android:elevation="4dp"
    android:padding="4dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tx_name"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:gravity="center"
            android:text=" tx_name"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="?attr/actionModeSplitBackground"/>

        <TextView
            android:id="@+id/tx_username"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView9"
            android:layout_toRightOf="@+id/textView9"
            android:gravity="center"
            android:text=" tx_username"
            android:textStyle="bold"
            android:textColor="?attr/actionModeSplitBackground"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tx_password"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView10"
            android:layout_toRightOf="@+id/textView10"
            android:gravity="center"
            android:text=" tx_password"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="?attr/actionModeSplitBackground"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tx_age"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView11"
            android:layout_toRightOf="@+id/textView11"
            android:gravity="center"
            android:text=" tx_age"
            android:textStyle="bold"
            android:textColor="?attr/actionModeSplitBackground"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tx_email"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView12"
            android:layout_toRightOf="@+id/textView12"
            android:gravity="center"
            android:text=" tx_email"
            android:textStyle="bold"
            android:textColor="?attr/actionModeSplitBackground"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tx_phone"
            android:layout_width="wrap_content"
            android:layout_height="100dp"

            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView13"
            android:layout_toRightOf="@+id/textView13"
            android:gravity="center"
            android:text=" tx_phone"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="?attr/actionModeSplitBackground"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tx_id"
            android:layout_toRightOf="@+id/tx_id"
            android:gravity="center"
            android:text="  Name:  "
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tx_name"
            android:layout_toRightOf="@+id/tx_name"
            android:gravity="center"
            android:text="  Username:  "
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tx_username"
            android:layout_toRightOf="@+id/tx_username"
            android:gravity="center"
            android:text=" Password:  "
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:gravity="center"
            android:text="Age:  "
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@+id/tx_name"
            android:layout_toEndOf="@+id/tx_age"
            android:layout_toRightOf="@+id/tx_age"
            android:gravity="center"
            android:text="  email:  "
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView9"
            android:layout_toRightOf="@+id/textView9"
            android:gravity="center"
            android:text="  Phone:  "
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tx_phone"
            android:layout_toRightOf="@+id/tx_phone"
            android:gravity="center"
            android:text="  Address  "
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tx_id"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:gravity="center"
            android:text="tx_id"
            android:textStyle="bold"
            android:textColor="?attr/actionModeSplitBackground"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"

            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="ID:  "
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tx_address"
            android:layout_width="wrap_content"
            android:layout_height="100dp"

            android:layout_below="@+id/tx_password"
            android:layout_toEndOf="@+id/textView14"
            android:layout_toRightOf="@+id/textView14"
            android:gravity="center"
            android:text=" tx_address"
            android:textStyle="bold"
            android:textColor="?attr/actionModeSplitBackground"
            android:textAppearance="?android:textAppearanceLarge" />

    </RelativeLayout>


</android.support.v7.widget.CardView>